<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="http://qconsulting.ca/fo3/ModConfig5.0.xsd"> 
    <moduleName>Barstool Brawler</moduleName> 
    <installSteps order="Explicit"> 
        <installStep name="Install"> 
            <optionalFileGroups order="Explicit"> 
                <group name="Main" type="SelectExactlyOne"> 
                    <plugins order="Explicit">
                        <plugin name="MarkekrausBarstoolBrawler.esp">
                            <description>Adds a Barstool weapon to Skyrim.</description>
                            <image path="logo.png" />
                            <files>
                                <file source="MarkekrausBarstoolBrawler.esp" destination="MarkekrausBarstoolBrawler.esp" priority="0" />
                                <file source="MarkekrausBarstoolBrawler.bsa" destination="MarkekrausBarstoolBrawler.bsa" priority="0" />
                            </files>
                            <typeDescriptor>
                                <type name="Optional"/>
                            </typeDescriptor>
                        </plugin>
                    </plugins> 
                </group> 
                <group name="Install Script Sources?" type="SelectExactlyOne"> 
                    <plugins order="Explicit"> 
                        <plugin name="No (Default)"> 
                            <description>Skips installing script sources.</description>
                            <image path="logo.png" />
                            <files></files>
                        <typeDescriptor> 
                            <type name="Optional"/> 
                        </typeDescriptor> 
                        </plugin>
                        <plugin name="Yes (For Mod Developers)"> 
                            <description>Installs script sources.</description>
                            <image path="logo.png" />
                            <files>
                                <file source="source\scripts\MEKBBModInitialization.psc" destination="source\scripts\MEKBBModInitialization.psc" priority="0" />
                            </files>
                            <typeDescriptor> 
                                <type name="Optional"/> 
                            </typeDescriptor> 
                        </plugin> 
                    </plugins> 
                </group> 
            </optionalFileGroups> 
        </installStep> 
    </installSteps> 
</config>
